#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    double a, b, c, x;

    cout << "Enter value a: " << endl;
    cin >> a;
    cout << "Enter value b: " << endl;
    cin >> b;
    cout << "Enter value c:" << endl;
    cin >> c;

    if ((pow(a,2) == pow(b,2) * pow(c,2)) || (pow(b,2) == pow(a,2) * pow(c,2)) || (pow(c,2) == pow(a,2) * pow(b,2)))
        cout << "The sides form a triangle" << endl;
    else
        cout << "The sides do not form a triangle." << endl;
    return 0;

}